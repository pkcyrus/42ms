<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/flush_activity_vertical_margin"
    android:paddingLeft="@dimen/flush_activity_horizontal_margin"
    android:paddingRight="@dimen/flush_activity_horizontal_margin"
    android:paddingTop="@dimen/flush_activity_vertical_margin"
    tools:context="com.pskehagias.fortytwomilliseconds.MainActivityFragment"
    tools:showIn="@layout/activity_main">

    <GridView
        android:id="@+id/movie_grid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:columnWidth="80dp"
        android:verticalSpacing="0dp"
        android:horizontalSpacing="0dp"
        android:numColumns="auto_fit"
        android:stretchMode="none"
        />


</FrameLayout>
